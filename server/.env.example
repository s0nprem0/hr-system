# Copy this file to `server.env/.env` and fill values for your environment
# To Generate JWT key : go to https://jwtsecrets.com/#generator

# Server
JWT_KEY=your_jwt_secret_here
MONGO_URI=mongodb://127.0.0.1:27017/hr-system
PORT=5000
CLIENT_URL=http://localhost:5173
LOG_LEVEL=info

# Seed accounts (optional; defaults are provided for local dev)
# Replace these with your own secure values in your local `.env` file.
ADMIN_EMAIL=change-me@example.com
ADMIN_PASSWORD=CHANGE_ME_PLEASE
HR_EMAIL=change-me+hr@example.com
HR_PASSWORD=CHANGE_ME_PLEASE
EMP_EMAIL=change-me+emp@example.com
EMP_PASSWORD=CHANGE_ME_PLEASE
